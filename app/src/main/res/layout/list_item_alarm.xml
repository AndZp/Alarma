<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <TextView
      android:id="@+id/tv_alarm_time"
      android:layout_width="wrap_content"
      android:layout_height="55dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginBottom="6dp"
      android:layout_marginLeft="6dp"
      android:layout_marginRight="6dp"

      android:layout_marginTop="6dp"
      android:gravity="center"
      android:text="TextView"
      android:textSize="36sp"
      android:visibility="visible"
      android:layout_alignParentLeft="true"
      />
  <TextView
      android:id="@+id/tv_alarm_lable"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"


      android:text="TextView"
      android:textAlignment="textStart"
      android:layout_alignTop="@+id/tv_alarm_time"
      android:layout_toEndOf="@+id/tv_alarm_time"
      />
  <Switch
      android:id="@+id/switch_alarm"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"


      android:layout_marginEnd="11dp"
      android:layout_below="@+id/tv_alarm_lable"
      android:layout_alignParentEnd="true"
      />
  <TextView
      android:id="@+id/tv_days_title"
      android:layout_width="wrap_content"
      android:layout_height="24dp"

      android:layout_alignStart="@+id/tv_alarm_time"
      android:layout_alignTop="@+id/btn_info"


      android:gravity="center"
      android:text="Days:"
      />
  <TextView
      android:id="@+id/tv_alarm_days"
      android:layout_width="wrap_content"
      android:layout_height="24dp"
      android:gravity="center"
      android:text="Sut, San"

      android:layout_alignBottom="@+id/tv_days_title"
      android:layout_toEndOf="@+id/tv_alarm_location"
      android:layout_alignTop="@+id/tv_days_title"
      />
  <TextView
      android:id="@+id/tv_alarm_location"
      android:layout_width="wrap_content"
      android:layout_height="24dp"

      android:layout_alignStart="@+id/tv_days_title"


      android:layout_alignTop="@+id/btn_info"
      android:layout_marginTop="36dp"
      android:text="Location"
      android:textAlignment="textStart"
      />
  <Button
      android:id="@+id/btn_info"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="0dp"
      android:text="i"

      android:layout_below="@+id/tv_alarm_time"
      android:layout_alignParentEnd="true"
      />
</RelativeLayout>