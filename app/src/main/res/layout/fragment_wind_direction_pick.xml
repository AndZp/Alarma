<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    >
  <include layout="@layout/view_wind_direction_picker"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/tv_param_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_weight="1"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/location"
        android:gravity="center_vertical|start"
        android:text="@string/wind_speed_title"
        android:textColor="@color/text_grey"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:text="Cel"
        android:textColor="@color/text_grey"
        android:textSize="16sp"
        />
  </LinearLayout>

  <org.florescu.android.rangeseekbar.RangeSeekBar
      android:id="@+id/speed_range_seek_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="17dp"
      app:activeColor="@color/colorPrimary"
      app:defaultColor="@color/text_grey"
      app:textAboveThumbsColor="@color/text_grey"
      app:thumbDisabled="@drawable/seek_disabled"
      app:thumbNormal="@drawable/seek_normal"
      app:thumbPressed="@drawable/seek_pressed"
      app:thumbShadowColor="@color/colorPrimary"
      app:barHeight="3dp"
      />

  <TextView
      android:id="@+id/tv_dialog_ok"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="OK"
      android:layout_gravity="end"
      android:layout_margin="30dp"
      android:textColor="@color/colorPrimary"
      android:textSize="20sp"
      />

</LinearLayout>