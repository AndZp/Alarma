<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    >

  <TextView
      android:id="@+id/tv_param_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="21dp"
      android:layout_weight="1"
      android:drawablePadding="10dp"
      android:drawableStart="@drawable/location"
      android:gravity="center_vertical|start"
      android:text="@string/wind_title"
      android:textColor="@color/text_grey"
      android:textSize="16sp"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="10dp"
      >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        android:text="@string/speed_title"
        android:textColor="@color/text_grey"
        android:textSize="16sp"
        />


    <TextView
        android:id="@+id/item_tv_speed_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        android:text="5 - 18"
        android:textColor="@color/text_grey"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/item_tv_speed_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        android:text="m/s"
        android:textColor="@color/text_grey"
        android:textSize="16sp"
        android:visibility="gone"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/ll_wind_dir"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="10dp"
      >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        android:text="@string/direction_title"
        android:textColor="@color/text_grey"
        android:textSize="16sp"
        />


    <TextView
        android:id="@+id/item_tv_dir_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        android:text="E - W"
        android:textColor="@color/text_grey"
        android:textSize="16sp"
        />
  </LinearLayout>

</LinearLayout>