<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.activity.main.MainAlarmActivity"
    tools:showIn="@layout/activity_main_alarm"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    >

  <android.support.v7.widget.RecyclerView
      android:id="@+id/rv_alarm_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone"

      />

  <TextView
      android:id="@+id/iv_empty_stay"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawableTop="@drawable/empty_state_icon_gray"
      android:gravity="center"
      android:layout_gravity="center"

      android:drawablePadding="20dp"
      android:foregroundGravity="center"
      android:text="@string/alarm_list_empty_state_add_alarm_text"
      android:visibility="visible"
      android:textSize="20sp"
      android:textColor="@color/text_grey"
      android:layout_marginTop="-15dp"
      />
</FrameLayout>
